<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Body">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Body.Light">
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Caption">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Caption.Light">
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Caption.Small">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Body.Bold">
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Subtitle">
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="TextAppearance.Title">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">32sp</item>
    </style>

</resources>